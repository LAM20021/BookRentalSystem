<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="16dp"
    android:paddingTop="16dp"
    android:paddingEnd="16dp"
    android:paddingBottom="16dp"
    tools:context=".AvailableBooksActivity">

    <TextView
        android:id="@+id/textViewPickupDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pickup Date:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/textViewReturnDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Return Date:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@id/textViewPickupDate"
        android:layout_marginBottom="8dp"/>

    <ListView
        android:id="@+id/listViewAvailableBooks"
        android:layout_width="356dp"
        android:layout_height="383dp"
        android:layout_below="@id/textViewReturnDate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="1dp" />

    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/listViewAvailableBooks"
        android:layout_marginTop="16dp"
        android:text="Login"/>

</RelativeLayout>
